<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.fightkeeper">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fightkeepericon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fightkeepericon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"> <!-- Not really nice, but I don't have time to figure out also an adaptive horizontal layout -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>